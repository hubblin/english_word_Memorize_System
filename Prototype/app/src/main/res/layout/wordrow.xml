<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corner_shape_selector_view"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/wordLayout">

        <TextView
            android:id="@+id/spellText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="text"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextMean1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spellText"
            android:layout_marginLeft="5dp"
            android:text="text1" />

        <TextView
            android:id="@+id/TextMean2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextMean1"
            android:layout_marginLeft="5dp"
            android:text="text2" />

        <TextView
            android:id="@+id/TextMean3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextMean2"
            android:layout_marginLeft="5dp"
            android:text="text3" />

        <TextView
            android:id="@+id/TextMean4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextMean3"
            android:layout_marginLeft="5dp"
            android:text="text4" />

        <TextView
            android:id="@+id/TextMean5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextMean4"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="text5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/battery_back"
        android:layout_toLeftOf="@+id/battery"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@drawable/gauge_shape">

        <LinearLayout
            android:id="@+id/gauge4"
            android:layout_width="7dp"
            android:layout_height="20dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/gauge"
            android:orientation="vertical"
            android:visibility="invisible"/>
        <LinearLayout
            android:id="@+id/gauge3"
            android:orientation="vertical"
            android:layout_width="7dp"
            android:layout_height="20dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/gauge"
            android:visibility="invisible"
            />
        <LinearLayout
            android:id="@+id/gauge2"
            android:orientation="vertical"
            android:layout_width="7dp"
            android:layout_height="20dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/gauge"
            android:visibility="invisible"
            />
        <LinearLayout
            android:id="@+id/gauge1"
            android:orientation="vertical"
            android:layout_width="7dp"
            android:layout_height="20dp"
            android:background="@drawable/gauge"
            android:visibility="invisible"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/battery"
        android:layout_width="3dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/gauge_plus"

            ></LinearLayout>

    </LinearLayout>

</RelativeLayout>